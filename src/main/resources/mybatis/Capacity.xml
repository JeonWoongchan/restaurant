<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.restaurant.repository.mybatis.CapacityMapper">
    <update id="updateCapacities" parameterType="java.util.List">
        UPDATE capacity
        SET capacity = CASE id
        <foreach collection="capacities" item="item" index="index" separator=" ">
            WHEN #{item.id} THEN #{item.capacity}
        </foreach>
        END
        WHERE id IN
        <foreach collection="capacities" item="item" index="index" open="(" separator="," close=")">
            #{item.id}
        </foreach>
    </update>

    <select id="selectcapalist" resultType="Map">

        select hour_time,capacity from
        capacity;


    </select>

</mapper>